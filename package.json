{
  "name": "agile-planner-mcp-server",
  "version": "1.2.4",
  "description": "Serveur MCP pour la génération d'artefacts agiles (backlogs, features, user stories) avec IA - compatible Windsurf",
  "main": "server/index.js",
  "bin": {
    "agile-planner": "./server/index.js"
  },
  "files": [
    "server/**/*",
    "README.md",
    "README-FR.MD",
    "OPTIMAL_USAGE_GUIDE.MD",
    "LICENSE"
  ],
  "scripts": {
    "start": "node server/index.js",
    "cli": "node server/index.js --cli",
    "test": "jest",
    "test:isolated": "jest tests/isolated/",
    "test:validators": "jest tests/isolated/**/*validator*.test.js",
    "test:markdown": "jest tests/isolated/markdown-formatting.test.js",
    "test:user-story": "jest tests/isolated/format-user-story.test.js",
    "lint": "eslint .",
    "docs": "jsdoc -c jsdoc.json",
    "prepublishOnly": "npm test && npm run lint",
    "postversion": "git push && git push --tags",
    "postinstall": "node -e \"try { require('fs').chmodSync('./server/index.js', '755'); } catch (e) { }\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "agile",
    "backlog",
    "user-story",
    "feature",
    "product-backlog",
    "scrum",
    "ai-generator",
    "openai",
    "groq",
    "cli",
    "windsurf"
  ],
  "author": "Windsurf",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.3.0",
    "inquirer": "^8.2.6",
    "nanoid": "^3.3.6",
    "node-fetch": "^2.6.7",
    "openai": "^4.30.0",
    "slugify": "^1.6.6",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyberlife-coder/agile-planner-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/cyberlife-coder/agile-planner-mcp-server/issues"
  },
  "homepage": "https://github.com/cyberlife-coder/agile-planner-mcp-server#readme",
  "devDependencies": {
    "docdash": "^2.0.1",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jsdoc": "^4.0.2",
    "nock": "^14.0.4",
    "sinon": "^20.0.0",
    "supertest": "^7.1.0"
  }
}
